<h1>Listing diagnoses</h1>

<table>
  <tr>
    <th>Diagnosis</th>
    <th>Diagnosis date</th>
    <th>Cie 10</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @diagnoses.each do |diagnosis| %>
  <tr>
    <td><%= diagnosis.diagnosis %></td>
    <td><%= diagnosis.diagnosis_date %></td>
    <td><%= diagnosis.cie_10 %></td>
    <td><%= link_to 'Show', diagnosis %></td>
    <td><%= link_to 'Edit', edit_diagnosis_path(diagnosis) %></td>
    <td><%= link_to 'Destroy', diagnosis, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

